<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootView"
    style="@style/loginParent"
    android:layout_width="match_parent"
    android:background="#000000"
    android:orientation="vertical"
    tools:context="com.idivisiontech.transporttracker.TrackerActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="00dp"
        android:background="@drawable/ic_login_bk"
        android:orientation="horizontal">


        <androidx.cardview.widget.CardView
            style="@style/loginCard"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="60dp"
            android:layout_marginEnd="30dp"

            android:layout_marginRight="30dp"
            android:layout_marginBottom="30dp"

            android:elevation="5dp"
            android:orientation="horizontal"
            app:cardBackgroundColor="#0C3E66"
            app:cardCornerRadius="@dimen/loginCardRadius">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginRight="30dp"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/back"
                        style="@style/loginButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp"

                        android:background="#226125"
                        android:padding="10dp"
                        android:text="BACK"
                        android:textAlignment="center"
                        android:textSize="19sp" />




                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginBottom="30dp"
                    android:orientation="vertical">



                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical" >

                            <TableLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <TableRow
                                    android:background="#00BCD4"
                                    android:padding="10dp">

                                    <TextView
                                        android:layout_column="1"
                                        android:layout_weight="10"
                                        android:padding="3dip"
                                        android:text="POSISI"
                                        android:textColor="#000000"
                                        android:textAlignment="center"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:layout_column="2"
                                        android:layout_weight="30"
                                        android:gravity="center_vertical"
                                        android:padding="3dip"
                                        android:textColor="#000000"
                                        android:text="TEXT"
                                        android:textAlignment="center"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:layout_column="3"
                                        android:layout_weight="20"
                                        android:textColor="#000000"
                                        android:gravity="center_vertical"
                                        android:padding="3dip"
                                        android:text="STATUS"
                                        android:textAlignment="center"
                                        android:textStyle="bold" />


                                </TableRow>

                                <TableRow

                                    android:layout_width="match_parent"
                                    android:background="#ffffff"
                                    android:layout_height="match_parent"
                                    android:padding="7dp">

                                    <TextView
                                        android:layout_column="1"
                                        android:layout_weight="10"
                                        android:padding="3dip"
                                        android:text="FRONT"
                                        android:textColor="#000000"
                                        android:textAlignment="center"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:layout_column="2"
                                        android:layout_weight="30"
                                        android:gravity="center_vertical"
                                        android:padding="3dip"
                                        android:textColor="#000000"
                                        android:text="RUTE A21"
                                        android:textAlignment="center"
                                        android:textStyle="bold" />



                                    <Button
                                        android:id="@+id/button_front"
                                        android:layout_column="3"
                                        style="@style/loginButton"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="10dp"
                                        android:layout_marginTop="10dp"
                                        android:layout_marginRight="10dp"
                                        android:layout_weight="20"

                                        android:background="#226125"
                                        android:padding="10dp"
                                        android:text="ENABLE"
                                        android:textAlignment="center"
                                        android:textSize="19sp" />


                                </TableRow>

                                <TableRow

                                    android:layout_width="match_parent"
                                    android:background="#ffffff"
                                    android:layout_height="match_parent"
                                    android:padding="7dp">

                                    <TextView
                                        android:layout_column="1"
                                        android:layout_weight="10"
                                        android:padding="3dip"
                                        android:text="BACK"
                                        android:textColor="#000000"
                                        android:textAlignment="center"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:layout_column="2"
                                        android:layout_weight="30"
                                        android:gravity="center_vertical"
                                        android:padding="3dip"
                                        android:textColor="#000000"
                                        android:text="RUTE A21"
                                        android:textAlignment="center"
                                        android:textStyle="bold" />

                                    <Button
                                        android:id="@+id/button_back"
                                        android:layout_column="3"
                                        style="@style/loginButton"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="10dp"
                                        android:layout_marginTop="10dp"
                                        android:layout_marginRight="10dp"
                                        android:layout_weight="20"

                                        android:background="#226125"
                                        android:padding="10dp"
                                        android:text="ENABLE"
                                        android:textAlignment="center"
                                        android:textSize="19sp" />


                                </TableRow>

                                <TableRow

                                    android:layout_width="match_parent"
                                    android:background="#ffffff"
                                    android:layout_height="match_parent"
                                    android:padding="7dp">

                                    <TextView
                                        android:layout_column="1"
                                        android:layout_weight="10"
                                        android:padding="3dip"
                                        android:text="INDOOR"
                                        android:textColor="#000000"
                                        android:textAlignment="center"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:layout_column="2"
                                        android:layout_weight="30"
                                        android:gravity="center_vertical"
                                        android:padding="3dip"
                                        android:textColor="#000000"
                                        android:text="RUTE A21"
                                        android:textAlignment="center"
                                        android:textStyle="bold" />

                                    <Button
                                        android:id="@+id/button_indoor"
                                        android:layout_column="3"
                                        style="@style/loginButton"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="10dp"
                                        android:layout_marginTop="10dp"
                                        android:layout_marginRight="10dp"
                                        android:layout_weight="20"

                                        android:background="#226125"
                                        android:padding="10dp"
                                        android:text="ENABLE"
                                        android:textAlignment="center"
                                        android:textSize="19sp" />


                                </TableRow>


                            </TableLayout>
                        </LinearLayout>
                    </ScrollView>

                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <ScrollView
            android:id="@+id/scroll"
            style="@style/parent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_marginStart="0dp">


            <RelativeLayout
                style="@style/parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="130dp">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true"
                    android:weightSum="12">

                    <RelativeLayout
                        style="@style/parent"
                        android:layout_height="45dp"
                        android:layout_weight="100"
                        android:background="#226125"
                        android:orientation="vertical">

                        <ImageView
                            style="@style/parent"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:contentDescription="login background" />


                    </RelativeLayout>


                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="00dp"
                    android:layout_marginLeft="100dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="0dp"
                    android:gravity="center"
                    android:orientation="horizontal">


                    <TextView
                        style="@style/headerText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0dp"
                        android:text="GPS: "
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/trackingStatus"
                        style="@style/headerText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity=""
                        android:layout_marginTop="0dp"
                        android:text="Status"
                        android:textSize="18sp" />

                    <TextView
                        style="@style/headerText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0dp"
                        android:text="   DATA: "
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/networkStatus"
                        style="@style/headerText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity=""
                        android:layout_marginTop="0dp"
                        android:text="4G LTE"
                        android:textSize="18sp" />

                    <TextView
                        style="@style/headerText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0dp"
                        android:text="   SERVER: "
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/serverStatus"
                        style="@style/headerText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity=""
                        android:layout_marginTop="0dp"
                        android:text="OK"
                        android:textSize="18sp" />


                </LinearLayout>

            </RelativeLayout>

        </ScrollView>

    </RelativeLayout>

</RelativeLayout>


